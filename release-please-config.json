{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "node",
  "tag-separator": "@",
  "include-component-in-tag": true,
  "separate-pull-requests": true,
  "packages": {
    "packages/htms-js": {
      "package-name": "htms-js",
      "changelog-path": "changelog.md"
    },
    "packages/fastify-htms": {
      "package-name": "fastify-htms",
      "changelog-path": "changelog.md",
      "additional-paths": ["packages/htms-js"]
    },
    "packages/htms-server": {
      "package-name": "htms-server",
      "changelog-path": "changelog.md",
      "additional-paths": ["packages/fastify-htms"]
    }
  },
  "changelog-sections": [
    { "type": "feat", "section": "✨ Features" },
    { "type": "fix", "section": "🐛 Bug Fixes" },
    { "type": "docs", "section": "📝 Docs" },
    { "type": "refactor", "section": "🛠 Refactors" },
    { "type": "style", "section": "🎨 Style" },
    { "type": "test", "section": "🧪 Tests" },
    { "type": "ci", "section": "⚙️ CI" },
    { "type": "chore", "section": "🧹 Chores" },
    { "type": "deps", "section": "📦 Dependencies" }
  ]
}
