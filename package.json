{
  "private": true,
  "name": "htms-js-woprkspace",
  "scripts": {
    "prepare": "npx simple-git-hooks",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "lint:ci": "pnpm lint --max-warnings=0",
    "format": "prettier **/* --ignore-unknown",
    "format:write": "pnpm format --write",
    "format:ci": "pnpm format --check",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "build": "pnpm -r build",
    "reset": "rimraf --glob **/node_modules **/dist ./pnpm-lock.yaml"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@skarab/prettier-config": "^1.2.2",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.34.0",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^60.0.0",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.15.1",
  "prettier": "@skarab/prettier-config",
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "pnpm prettier --write --ignore-unknown",
      "pnpm eslint --fix --no-warn-ignored --max-warnings=0"
    ]
  },
  "engines": {
    "node": ">=24.7.0"
  }
}
